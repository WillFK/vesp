<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/labRat"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <view
        android:id="@+id/labRatView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="@id/labRat"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/labRat"
        android:layout_marginStart="10dp"
        />

    <view
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="@id/labRat"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/labRatView1"
        android:layout_marginStart="10dp"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/labRatView1"
        app:layout_constraintStart_toStartOf="@id/labRatView1"
        app:layout_constraintEnd_toEndOf="@id/labRatView1"
        app:layout_constraintTop_toTopOf="@id/labRatView1"
        app:layout_constraintBottom_toBottomOf="@id/labRatView1"
        app:layout_constraintVertical_bias=".9"
        />

</android.support.constraint.ConstraintLayout>